{
  "name": "json-newsletter-app",
  "version": "0.0.1",
  "description": "newsletter app (JSON reader)",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass-watch": "sass --watch scss/global.scss public/css/global.css",
    "nodemon-watch": "nodemon --ignore public",
    "dev": " npm-run-all --parallel sass-watch nodemon-watch",
    "start": "npx sass scss/global.scss public/css/global.css --watch",
    "build": "npx sass scss/global.scss public/css/global.css --style=compressed"
  },
  "keywords": [
    "json",
    "javascript",
    "html",
    "css"
  ],
  "author": "Simon B. Hoekstra",
  "license": "ISC",
  "dependencies": {
    "connect-livereload": "^0.6.1",
    "express": "^4.18.2",
    "gorko": "^0.9.1",
    "livereload": "^0.9.3",
    "sass": "^1.69.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5"
  }
}
